# =============================================================================
# MyAutoWhiz.com - Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in the values
# NEVER commit .env.local to version control
# =============================================================================

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Get these from your Supabase project dashboard:
# https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api

NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT_ID.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Service role key - ONLY use server-side, bypasses RLS
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# =============================================================================
# SITE CONFIGURATION
# =============================================================================

NEXT_PUBLIC_SITE_URL=https://myautowhiz.com
NEXT_PUBLIC_SITE_NAME=MyAutoWhiz

# =============================================================================
# OAUTH PROVIDERS
# =============================================================================
# Configure these in Supabase Dashboard > Authentication > Providers

# Google OAuth
# Create credentials at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Apple OAuth
# Create at: https://developer.apple.com/account/resources/identifiers
APPLE_CLIENT_ID=your_apple_client_id
APPLE_SECRET_KEY=your_apple_secret_key
APPLE_TEAM_ID=your_apple_team_id
APPLE_KEY_ID=your_apple_key_id

# GitHub OAuth (optional)
# Create at: https://github.com/settings/applications/new
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Facebook OAuth (optional)
# Create at: https://developers.facebook.com/apps
FACEBOOK_CLIENT_ID=your_facebook_app_id
FACEBOOK_CLIENT_SECRET=your_facebook_app_secret

# =============================================================================
# STRIPE CONFIGURATION
# =============================================================================
# Get from: https://dashboard.stripe.com/apikeys

STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key

# Webhook secret for Stripe webhooks
# Get from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# =============================================================================
# THIRD-PARTY VEHICLE DATA APIs
# =============================================================================

# NHTSA API - FREE, no key required
# Documentation: https://vpic.nhtsa.dot.gov/api/
# Base URL: https://vpic.nhtsa.dot.gov/api

# VinAudit API
# Sign up at: https://www.vinaudit.com/api
# Documentation: https://www.vinaudit.com/vehicle-history-api
VINAUDIT_API_KEY=your_vinaudit_api_key
VINAUDIT_API_USER=your_vinaudit_username
VINAUDIT_API_PASS=your_vinaudit_password

# ClearVin NMVTIS API
# Sign up at: https://www.clearvin.com/en/api-subscribers
# Documentation: https://www.clearvin.com/en/api-subscribers/nmvtis-history-api/
CLEARVIN_EMAIL=your_clearvin_email
CLEARVIN_PASSWORD=your_clearvin_password

# Vehicle Databases API
# Sign up at: https://vehicledatabases.com
# Documentation: https://vehicledatabases.com/vehicle-history-api
VEHICLE_DATABASES_API_KEY=your_vehicle_databases_api_key

# Auto.dev API (optional)
# Sign up at: https://auto.dev
# Documentation: https://docs.auto.dev
AUTODEV_API_KEY=your_autodev_api_key

# Kelley Blue Book API (Enterprise)
# Contact: https://b2b.kbb.com/contact/
# KBB_API_KEY=your_kbb_api_key

# =============================================================================
# AI/ML CONFIGURATION
# =============================================================================

# OpenAI API (for GPT-based analysis)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_api_key

# Anthropic API (for Claude-based analysis)
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key

# Replicate API (for custom ML models)
# Get from: https://replicate.com/account
REPLICATE_API_TOKEN=r8_your_replicate_token

# =============================================================================
# FILE STORAGE
# =============================================================================

# Supabase Storage is used by default
# S3-compatible storage (optional alternative)
# S3_ACCESS_KEY_ID=your_s3_access_key
# S3_SECRET_ACCESS_KEY=your_s3_secret_key
# S3_REGION=us-east-1
# S3_BUCKET=myautowhiz-uploads

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# Resend (recommended)
# Sign up at: https://resend.com
RESEND_API_KEY=re_your_resend_api_key

# SendGrid (alternative)
# SENDGRID_API_KEY=SG.your_sendgrid_api_key

# Email from address
EMAIL_FROM=noreply@myautowhiz.com
EMAIL_FROM_NAME=MyAutoWhiz

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================

# Vercel Analytics (auto-configured on Vercel)
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your_vercel_analytics_id

# PostHog Analytics
# NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key
# NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Sentry Error Tracking
# Sign up at: https://sentry.io
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=myautowhiz

# =============================================================================
# FEATURE FLAGS
# =============================================================================

NEXT_PUBLIC_ENABLE_AUDIO_ANALYSIS=true
NEXT_PUBLIC_ENABLE_VISUAL_ANALYSIS=true
NEXT_PUBLIC_ENABLE_HISTORY_REPORTS=true
NEXT_PUBLIC_ENABLE_MARKET_VALUES=true
NEXT_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true
NEXT_PUBLIC_MAINTENANCE_MODE=false

# =============================================================================
# RATE LIMITING
# =============================================================================

# Upstash Redis (for rate limiting)
# Sign up at: https://upstash.com
UPSTASH_REDIS_REST_URL=https://your_redis_url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_upstash_token

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable debug logging
DEBUG=false

# Skip email verification in development
SKIP_EMAIL_VERIFICATION=false

# Use test API credentials
USE_TEST_APIS=false
